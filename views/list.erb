<h1><%= @list.name() %></h1>

<ul>
  <% @list.tasks().each() do |task| %>

  <li><a href='/tasks/<%= task.list_id() %>'><%= task.description() %></a></li>
  <% end %>
</ul>

<form action='/lists/:id' method='post'>
  <div class='form-group'>

    <label for="list_id">Select a List</label>
    <select id='list_id' name='list_id' type='text'>
      <% @lists.each() do |list| %>
      <option value="<%= list.id()%>"> <%= list.name() %> </option>
      <% end %>
    </select>


    <label for='description'>Task Description</label>
    <input id = 'description' name='description' type='text'>
  </div>
  <button type='submit' class='btn btn-button'>Add</button>
</form>


<p><a href='/lists/<%= @list.id %>/edit'>Edit <%=@list.name %> list</a></p>
<p><a href='/'>Return to Main Page</a></p>

<h1> Update the <%=@list.name %> list </h1>

<form action='/lists/ <%= @list.id %>' method='post'>
  <input name='_method' type='hidden' value='patch'>

  <label for='name'> Rename Your List:</label>
  <input id='name' name='name' type='text'>

  <button type='submit' class='btn-btn-success'> Update </button>
</form>
