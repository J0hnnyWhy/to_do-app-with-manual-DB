

  <h1><%= @list.name() %></h1>



<div class='form-group'>
<ul>
  <% @list.tasks().each() do |task| %>

  <li><%= task.description() %></li>
  <% end %>
</ul>
</div>


<form action='/lists/:id' method='post'>


  <label for="list_id">Select a List</label>
  <select id='list_id' name='list_id' type='text'>
    <% @lists.each() do |list| %>
    <option value="<%= list.id()%>"> <%= list.name() %> </option>
    <% end %>
  </select>


  <label for='description'>Task Description</label>

  <input id = 'description' name='description' type='text'>
  <button type='submit' class='btn btn-info'>Add</button>


</form>




<div class="form-group">
  <h1> Update the <%=@list.name %> list </h1>

    <form action='/lists/ <%= @list.id %>' method='post'>
      <input name='_method' type='hidden' value='patch'>

      <label for='name'> Rename Your List:</label>
      <input id='name' name='name' type='text'>

      <button type='submit' class='btn btn-info'> Update </button>

    </form>
</div>

<div class="container">
<form action='/' method='post'>
  <input name='_method' type='hidden' value='delete'>
  <input id='id' name='id' type='hidden' value='<%= @list.id %>'>

  <button type="submit" class='btn btn-danger'>Delete List</button>
</form>
</div>

<p><h3><a href='/'>Return to Main Page</h3></a></p>
