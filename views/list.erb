<h1><%= @list.name() %></h1>

<ul>
  <% @list.tasks().each() do |task| %>

  <li><a href='/tasks/<%= task.list_id() %>'><%= task.description() %></a></li>
  <% end %>
</ul>

<form action='/lists/:id' method='post'>
  <div class='form-group'>

    <label for="list_id">Select a List</label>
    <select id='list_id' name='list_id' type='text'>
      <% @lists.each() do |list| %>
      <option value="<%= list.id()%>"> <%= list.name() %> </option>
      <% end %>
    </select>


    <label for='description'>Task Description</label>
    <input id = 'description' name='description' type='text'>
  </div>
  <button type='submit' class='btn btn-button'>Add</button>
</form>
